<header>
  <div>
    <%= link_to "Sign in", new_user_session_path %>
  </div>
  <div><%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete, confirm: "Are you sure?" } %></div>
  <div><%= link_to "Register", new_user_registration_path %></div>
  <div><%= link_to "Post new article", new_post_path %></div>
</header>
<main>
  <ul>
    <% @posts.each do |p| %>
      <ul>
        <% if user_signed_in? then%>
          <h2>Writen by: <%= p.user.name %></h2>
        <% else %>
          <div>
            <h2>Please sing in to see who whore the article!</h2>
          </div>
        <% end %>
        <li><%= p.title %></li>
        <li><%= p.body %></li>
      </ul>
    <%end%>
  </ul>
</main>
<footer>
  Created by MEs.
</footer>